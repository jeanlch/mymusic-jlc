
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
		<h1>Secure Page</h1>
		<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
    <table>
      <tr><th>Album Art</th><th>Song Name</th><th>Artist</th><th>Duration</th></tr>
      {{#each records}}
        <tr>
          <td><img src="images/{{this.art}}" /></td>
          <td>{{this.name}}</td>
          <td>{{this.artist}}</td>
          <td>{{this.durationm}}:{{this.durations}}</td>
      </tr>
      {{/each}}
      </table>
		</main>
	</body>
</html>
