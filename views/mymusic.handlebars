
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>My Music - Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
		<h1>My Music Tracks</h1>
		<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
    <table>
      <tr><th>Album Art</th><th>Song Name</th><th>Artist</th><th>Duration</th><th>Actions</th></tr>
      {{#each records}}
        <tr>
          <td><img src="/public/data/{{this.art}}" alt="album cover" /></td>
          <td>{{this.name}}</td>
          <td>{{this.artist}}</td>
          <td>{{this.durationm}}:{{this.durations}}</td>
          <td><a href="/mymusic/details/{{this.id}}">details</a></td>
      </tr>
      {{/each}}
      </table>

		</main>
        <a class="add" href="mymusic/add">Upload a new track</a>
	</body>
</html>
